# Create duplicate table with normalized stats.
NBA_Scaled <- NBA %>% mutate_at(vars(c(G:MP, FG:PpG)), scale)
NBA_Scaled <- NBA
NBA_Scaled[, c(6:8, 15:54)] <- scale(NBA[, c(6:8, 15:54)])
