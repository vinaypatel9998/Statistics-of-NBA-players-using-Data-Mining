# Create new variables:
NBA <- NBA %>%
rowwise() %>%
mutate(Height = convertHeight(`Height-feet`),
Weight = round(conv_unit(`Weight-lbs`, "lbs", "kg"),0),
BMI = round(Weight / (Height / 100)^2, 2),
Born = Year - Age,
ORpG = ORB / G,
DRpG = DRB / G,
