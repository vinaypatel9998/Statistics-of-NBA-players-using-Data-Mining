col = "blue",
alpha = 0.3,
linetype = 5) +
geom_text(data = BMIclass,
mapping = aes(x = X, y = Y, label = label),
size = 3,
vjust = 0,
hjust = 0,
color = "forestgreen") +
scale_linetype_manual(name = "", values = c(1, 1, 1, 1)) +
guides(fill=FALSE) +
theme(legend.position="bottom")
